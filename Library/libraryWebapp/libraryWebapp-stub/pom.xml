<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
 
  <parent>
    <groupId>com.philippe75</groupId>
    <artifactId>libraryWebapp</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
 
  <artifactId>libraryWebapp-stub</artifactId>
  <name>libraryWebapp-stub</name>
 
  <dependencies>
  
     <!-- ===== Modules ===== -->
     <dependency>
         <groupId>${project.groupId}</groupId>
         <artifactId>${project.parent.artifactId}-technical</artifactId>
     </dependency>

  </dependencies>
  
  <build>
	<plugins>
		<plugin>
			<groupId>org.codehaus.mojo</groupId> 
			<artifactId>jaxws-maven-plugin</artifactId>
			<executions> 
				<execution>
					<id>wsdl1</id> 
					<goals> 
						<goal>wsimport</goal> 
					</goals> 
					<configuration> 
						<packageName>com.philippe75.libraryWebapp.stub.generated.authServ</packageName>
						<sourceDestDir>/${project.basedir}/src/main/java</sourceDestDir>
						<wsdlUrls>
							<wsdlUrl>http://localhost:8080/libraryWS-webservice/libraryAuthService?wsdl</wsdlUrl>
						</wsdlUrls>
					</configuration>
				</execution> 
				<execution>
					<id>wsdl2</id> 
					<goals> 
						<goal>wsimport</goal> 
					</goals> 
					<configuration> 
						<packageName>com.philippe75.libraryWebapp.stub.generated.bookServ</packageName>
						<sourceDestDir>/${project.basedir}/src/main/java</sourceDestDir>
						<wsdlUrls>
							<wsdlUrl>http://localhost:8080/libraryWS-webservice/libraryService?wsdl</wsdlUrl>
						</wsdlUrls>
					</configuration>
				</execution>
				<execution>
					<id>wsdl3</id> 
					<goals> 
						<goal>wsimport</goal> 
					</goals> 
					<configuration> 
						<packageName>com.philippe75.libraryWebapp.stub.generated.borrowingServ</packageName>
						<sourceDestDir>/${project.basedir}/src/main/java</sourceDestDir>
						<wsdlUrls>
							<wsdlUrl>http://localhost:8080/libraryWS-webservice/libraryBorrowingService?wsdl</wsdlUrl>
						</wsdlUrls>
					</configuration>
				</execution>  

			</executions>		
		</plugin>
	</plugins>
  </build>
</project>
